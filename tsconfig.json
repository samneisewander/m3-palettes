{
	"compilerOptions": {
		"target": "ES2024",
		"module": "nodenext",
		"rootDir": "./src",
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react-jsx"
	},
	"include": ["./src/**/*"],
	"exclude": ["./tests/**/*", "./utils/**/*",]
}
